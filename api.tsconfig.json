{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/server",
    "sourceMap": true,
    "baseUrl":"./src/",
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "skipLibCheck":true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@common/*": [
        "app/common/*"
      ],
      "@calendar/*": [
        "app/calendar/*"
      ],
      "@settings/*": [
        "app/settings/*"
      ],
      "@patients/*": [
        "app/patients/*"
      ]
    }
  },
  "include": ["./api/routes/index.ts", "./api/models/index.ts"]
}
